{
  "compilerOptions": {
      // the following is recommended for nodejs by <https://github.com/Microsoft/TypeScript-Node-Starter/blob/master/tsconfig.json>
      "module": "commonjs",
      "esModuleInterop": true, // mixing of module styles?
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "strict": true, // enable all strict type checking
      "noImplicitReturns": true,
      "forceConsistentCasingInFileNames": true,
      // custom stuff below
  },
  "include": [
      "src/**/*"
  ]
}
