{
  "name": "foods",
  "version": "0.0.1",
  "description": "some recipe list thing",
  "main": "src/index.js",
  "author": "David Hwang",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.11",
    "prettier": "1.17.0",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "dotenv": "^7.0.0",
    "express": "^4.16.4"
  },
  "scripts": {
    "server": "node dist/index.js",
    "start": "yarn run server",
    "build": "yarn run build-ts && yarn run tslint",
    "build-ts": "tsc",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  }
}
